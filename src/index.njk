<div class="w3-container">
	<section class="w3-row-padding">
		{% for data in menus.top %}
			{% set showcard = not ( data.hide or data.hide_card or (data.hide_prod and site.env) ) %}
			{% if showcard %}
			<article class="w3-col m6 l4 w3-padding">
				<div class="w3-card-4">
					
					<header>
						{% if data.url -%}
						<a href="{{ data.url }}" title="{{ data.hint | safe }}">
						{%- endif %}
							<div class="w3-container w3-padding w3-{{ data.color | d('gray') }} w3-hover-shadow caption"
								{% if data.action -%}onclick="{{ data.action }}"{%- endif %}
							>
								<b>{{ data.title | d('&nbsp;') | safe }}</b>
								<span class="w3-right">{{ data.tag | d('&nbsp;') | safe }}</span>
							</div>
						{%if data.url %}</a>{% endif %}
					</header>
					
					<div class="w3-container w3-white w3-hide-small">
						<div class="w3-col w3-center w3-hover-shadow hwn-overflow" style="width:5rem;margin:8px 4px;vertical-align:middle;">
							{% if data.url -%}
							<a href="{{ data.url }}" title="{{ data.hint | safe }}">
							{%- endif %}
								<div class="w3-image w3-padding" {% if data.action -%}onclick="{{ data.action }}"{%- endif %}>
									{% set icon %}{{ data.icon | d('zap') }}{% endset %}
									{% lucide icon, { "size": "3rem" } %}
								</div>
							{%if data.url %}</a>{% endif %}
						</div>
						<div class="w3-rest w3-padding-tiny w3-container w3-small w3-hide-small" style="height:6rem;overflow:auto">
							<p>{% for line in data.text %}
								{{ line | safe }}<br>
							{% endfor %}</p>
						</div>
					</div>
				
					<footer>
						<div class="w3-container w3-padding w3-light-grey w3-tiny" style="height:2rem;overflow:hidden">
							{% if data.url -%}
							<a href="{{ data.url }}" title="{{ data.hint | safe }}" class="w3-margin-bottom ">
							{%- endif %}
								{{ data.bottom | d("&nbsp;") | safe }}
							{% if data.url -%}
							</a>
							{%- endif %}
						</div>
					</footer>
				</div>
			</article>
			{% endif %}
		{% endfor %}
	</section>	
</div>
